{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build",
			"command": "/usr/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"-lpthread",
				"${file}",
				"-std=c++11",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++",
			"dependsOn": "clean"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "rm -rf ${workspaceFolder}/bin/*",
			"problemMatcher": []
		}
	]
}
